# MySQL Database Connection Configuration
# Copy this file to .env and update with your credentials

MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=your_database_name

# Optional: Set to 'true' to generate detailed report (default), 'false' for simple report
DETAILED_REPORT=true

# Optional: Set to 'true' to show all index statistics (only used when DETAILED_REPORT=false)
SHOW_ALL_STATS=false

# Optional: Export reports to files
# OUTPUT_HTML=index_report.html
# OUTPUT_CSV=index_report.csv
